<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:componentViewModels="clr-namespace:SampleApp.ViewModels.ComponentViewModels"
    xmlns:resources="clr-namespace:SampleApp.Resources"
    xmlns:views="clr-namespace:SampleApp.Views">

    <TextBlock
        x:Key="ValueLabel"
        x:Shared="False"
        Text="{x:Static resources:StringResources.Component_ValueLabel}" />

    <DataTemplate DataType="{x:Type componentViewModels:StringComponentViewModel}">
        <Border
            Margin="0,1,0,0"
            BorderBrush="Gray"
            BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <views:ComponentHeader
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    DataContext="{Binding .}" />

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="10,4,4,4"
                    VerticalAlignment="Center"
                    Text="{x:Static resources:StringResources.Component_ValueLabel}" />

                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Height="20"
                    Margin="0,4,4,4"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"
                    IsReadOnly="True"
                    Text="{Binding Value}" />
            </Grid>
        </Border>
    </DataTemplate>

    <DataTemplate DataType="{x:Type componentViewModels:IntComponentViewModel}">
        <Border
            Margin="0,1,0,0"
            BorderBrush="Gray"
            BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <views:ComponentHeader
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    DataContext="{Binding .}" />

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="10,4,4,4"
                    VerticalAlignment="Center"
                    Text="{x:Static resources:StringResources.Component_ValueLabel}" />

                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Height="20"
                    Margin="0,4,4,4"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Right"
                    VerticalContentAlignment="Center"
                    IsReadOnly="True"
                    Text="{Binding Value}" />
            </Grid>
        </Border>
    </DataTemplate>

    <DataTemplate DataType="{x:Type componentViewModels:FloatComponentViewModel}">
        <Border
            Margin="0,1,0,0"
            BorderBrush="Gray"
            BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <views:ComponentHeader
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    DataContext="{Binding .}" />

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="10,4,4,4"
                    VerticalAlignment="Center"
                    Text="{x:Static resources:StringResources.Component_ValueLabel}" />

                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Height="20"
                    Margin="0,4,4,4"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Right"
                    VerticalContentAlignment="Center"
                    IsReadOnly="True"
                    Text="{Binding Value}" />
            </Grid>
        </Border>
    </DataTemplate>
</ResourceDictionary>