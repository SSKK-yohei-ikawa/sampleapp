<UserControl
    x:Class="SampleApp.Views.ComponentHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:componentViewModels="clr-namespace:SampleApp.ViewModels.ComponentViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance componentViewModels:IComponentViewModel}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/CommonPartsDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel LastChildFill="True">
        <Button
            Width="16"
            Height="16"
            Margin="4,2,2,2"
            VerticalAlignment="Center"
            BorderThickness="0"
            Command="{Binding RemoveCommand}"
            CommandParameter="{Binding Id}"
            DockPanel.Dock="Right"
            Style="{StaticResource ResetButtonStyle}" />

        <TextBlock
            Margin="4,0,0,0"
            VerticalAlignment="Center"
            Text="{Binding Name}"
            ToolTip="{Binding Description}" />



    </DockPanel>
</UserControl>
